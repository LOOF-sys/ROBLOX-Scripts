local sword = script.Parent
local swordX = script.Parent.SwordBans.AntiCheat.LocalRemote

sword.Equipped:Connect(function()
if game.Players.LocalPlayer.Name == "SamTerraria10" then
		game.Players.LocalPlayer:Kick("You Have Been Manually Sword Banned / Appeal at discord: SamTerraria10#0001 or discord server: https://discord.gg/s5AnZJAKGw")
	end
end)

while true do
	wait(0.1)
	if script.Parent.SwordBans.AntiCheat.Disabled or swordX.Disabled == true then
		while true do
			wait(0.1)
			script.Parent.SwordBans.AntiCheat.Disabled = false
			game.Players.LocalPlayer:Kick()
		end
	end
end

